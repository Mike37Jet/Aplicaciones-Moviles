<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="@color/image_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcionalidades de Picasso"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargar Imagen Aleatoria"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCircleTransform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TransformaciÃ³n Circular"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoundedCorners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esquinas Redondeadas"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBlurEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efecto Blur"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrayscale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escala de Grises"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redimensionar"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</ScrollView>