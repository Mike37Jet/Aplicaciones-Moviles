<resources>
    <style name="Theme.ImageLibraryDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Estado y fondo -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Material Design especÃ­ficos -->
        <item name="materialCardViewStyle">@style/CardView.Custom</item>
    </style>

    <!-- Estilo personalizado para CardView -->
    <style name="CardView.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>